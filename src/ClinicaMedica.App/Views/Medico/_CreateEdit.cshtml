@model ClinicaMedica.App.ViewModels.MedicoViewModel

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="DataNascimento" class="control-label"></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="CRM" class="control-label"></label>
        <input asp-for="CRM" class="form-control" />
        <span asp-validation-for="CRM" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="EspecialidadeId" class="control-label"></label>
        <select asp-for="EspecialidadeId" class="form-control" asp-items="@(new SelectList(Model.Especialidades, "Id", "Descricao"))">
            <option></option>
        </select>
    </div>
</div>

<div class="form-group form-check col-md-6">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
    </label>
</div>