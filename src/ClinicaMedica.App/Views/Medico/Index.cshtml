@model IEnumerable<ClinicaMedica.App.ViewModels.MedicoViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <h2>Médicos</h2>
</div>

<br />

<div class="row">
    <a asp-action="Create" class="btn btn-success">Cadastrar &nbsp;<span class="fa fa-plus-circle"></span></a>
</div>

<br />

<div class="row">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CRM)
                </th>
                <th>
                    Especialidade
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CRM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especialidade.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td style="text-align: right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                            <span class="fa fa-pencil-alt"></span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                            <span class="fa fa-search"></span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <span class="fa fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
