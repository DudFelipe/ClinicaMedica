@model ClinicaMedica.App.ViewModels.MedicoViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <h2>Excluir nome <span class="text-danger">@Model.Nome</span></h2>
</div>

<div class="row">
    <p>
        Tem certeza que deseja excluir o médico <span class="text-danger">@Model.Nome</span>?
    </p>
</div>

<div>
    <hr />

    <partial name="_DetailsDelete" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> &nbsp;
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
