@model ClinicaMedica.App.ViewModels.EspecialidadeViewModel

@{
    ViewData["Title"] = "Detalhes da especialidade " + Model.Descricao;
}

<div class="row">
    <h2>Detalhes da especialidade <span class="text-info">@Model.Descricao</span></h2>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> &nbsp;
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
