@model ClinicaMedica.App.ViewModels.EspecialidadeViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <h2>Excluir especialidade <span class="text-danger">@Model.Descricao</span></h2>
</div>

<div class="row">
    <p>
        Tem certeza que deseja excluir a especialidade <span class="text-danger">@Model.Descricao</span>?
    </p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> &nbsp;
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
